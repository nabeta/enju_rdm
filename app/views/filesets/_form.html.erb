<%= form_with(model: fileset) do |form| %>
  <% if fileset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fileset.errors.count, "error") %> prohibited this fileset from being saved:</h2>

      <ul>
        <% fileset.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :dataset_id %>
    <%= form.text_field :dataset_id %>
    <%= link_to @fileset.dataset_id, @fileset.dataset %>
  </div>

  <div class="form-group">
    <%= form.label :attachment %>
    <%= form.file_field :attachment, direct_upload: true, class: "form-control-file" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
